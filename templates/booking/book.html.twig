{% extends 'base.html.twig' %}

{% form_theme form with ['bootstrap_4_layout.html.twig',_self] %}

{% block title %}Réservation{% endblock %}

	
{% block body %}
<div class="container">
				<h1>Réservez l'annonce {{ad.title}}</h1>

				{{form_start(form) }}
				<div class="row">
				<div class="col">	
				{{form_row(form.startDate,{'label':"Date de départ"}) }}
				</div>
				<div class="col">
				{{form_row(form.endDate,{'label':"Date de fin"})}}
				</div>
				</div>

				<div class="row">
				<div class="col">
				{{ form_row(form.comment,{'label':"Commentaire", 'attr':{'placeholder':"Un message avant votre arrivée ?"}}) }}
				</div>
				</div>

				<h4>Montant du séjour</h4>
				<div class="mt-3"> 0 nuit à {{ad.price}} € </div> <br>
				<button type="submit" class="btn btn-success ">Réservez ces dates </button> 
				{{ form_end(form) }}

			</div>
{% endblock %}
